<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <resource-ref>
        <description>Oracle Datasource example</description>
        <res-ref-name>jdbc/TestDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>ServletDelete</servlet-name>
        <servlet-class>servletView.ServletDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDelete</servlet-name>
        <url-pattern>/notif</url-pattern>
    </servlet-mapping>
    
    <servlet>
         <servlet-name>ServletChange</servlet-name>
        <servlet-class>servletView.ServletChange</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletChange</servlet-name>
        <url-pattern>/change</url-pattern>
        <url-pattern>/p</url-pattern>
        
    </servlet-mapping>
    
        <servlet>
         <servlet-name>ServletTaskManager</servlet-name>
        <servlet-class>servletView.ServletTaskManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletTaskManager</servlet-name>
        <url-pattern>/taskManager</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>taskManager.jsp</welcome-file>
    </welcome-file-list>
</web-app>
